<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="#C1C1C1"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!--头像-->
    <com.example.kingwen.test1.Views.CircleImageView
        android:layout_centerHorizontal="true"
        android:background="@color/maincolor"
        android:id="@+id/touxiang"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:src="@drawable/taylor"/>

    <!--名字-->
    <LinearLayout
        android:layout_marginTop="10dp"
        android:id="@+id/layout_name"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:text="姓名"
            android:textColor="#000000"
            android:textSize="30dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />

        <EditText
            android:id="@+id/et_name"
            android:text="chenlin"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />
    </LinearLayout>

    <include layout="@layout/divide_line"></include>

    <!--性别-->
    <LinearLayout
        android:layout_marginTop="10dp"

        android:layout_below="@+id/layout_name"
        android:id="@+id/layout_sex"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:text="性别"
            android:textColor="#000000"
            android:textSize="30dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <RadioGroup
            android:id="@+id/rg_sex"
            android:layout_marginLeft="20dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:text="男"
                android:textColor="#000000"
                android:textSize="30dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <RadioButton
                android:id="@+id/rb_man"
                android:layout_width="wrap_content"
                android:checked="true"
                android:layout_height="match_parent" />

            <TextView
                android:text="女"
                android:textColor="#000000"
                android:textSize="30dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <RadioButton
                android:id="@+id/rb_woman"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" />

        </RadioGroup>

    </LinearLayout>

    <include layout="@layout/divide_line"></include>

    <!--年龄-->
    <LinearLayout
        android:layout_marginTop="10dp"
        android:id="@+id/layout_age"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:text="年龄"
            android:textColor="#000000"
            android:textSize="30dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />

        <TextView
            android:id="@+id/tv_showage"
            android:text="18"
            android:gravity="right"
            android:textSize="30dp"
            android:textColor="#000000"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />

    </LinearLayout>

    <include layout="@layout/divide_line"></include>

    <!--出生年月-->

    <LinearLayout
        android:layout_marginTop="10dp"
        android:id="@+id/layout_birthday"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:text="出生日期"
            android:textSize="30dp"
            android:textColor="#000000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

       <!-- <DatePicker
            android:layout_width="match_parent"
            android:layout_height="wrap_content"></DatePicker>-->

        <TextView
            android:id="@+id/tv_showbirthday"
            android:text="eee"
            android:textSize="30dp"
            android:gravity="right"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />

    </LinearLayout>


    <include layout="@layout/divide_line"></include>



    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:text="学校"
            android:textColor="#000000"
            android:textSize="30dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">
        </TextView>


        <Spinner
            android:id="@+id/sp_school"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:entries="@array/schools"></Spinner>

    </LinearLayout>

    <include layout="@layout/divide_line"></include>

    <!--籍贯-->
    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:text="籍贯"
            android:textColor="#000000"
            android:textSize="30dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">
        </TextView>

        <TextView
            android:text="山东泰安"
            android:textColor="#000000"
            android:textSize="30dp"
            android:gravity="right"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">
        </TextView>



    </LinearLayout>

</LinearLayout>
